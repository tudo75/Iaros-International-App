<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IarosInternational" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blu_iaros</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/Widget.IarosInternational.App.BottomNavigationView</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:colorBackground">@color/gray_lighter</item>
    </style>

    <style name="Theme.IarosInternational.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="Theme.IarosInternational.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IarosInternational.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.IarosInternational.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/Theme.IarosInternational.App.BottomNavigationView</item>
    </style>

    <style name="Theme.IarosInternational.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/blu_iaros</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.IarosInternational.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="postSplashScreenTheme">@style/Theme.IarosInternational.NoActionBar
        </item>
    </style>

    <style name="Theme.IarosInternational.Text">
        <item name="android:textSize">17sp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="Theme.IarosInternational.Text.title_page">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.IarosInternational.Text.title_home"
        parent="Theme.IarosInternational.Text.title_page">
    </style>

    <style name="Theme.IarosInternational.Text.title_contacts"
        parent="Theme.IarosInternational.Text.title_page">
    </style>

    <style name="Theme.IarosInternational.Text.title_courses"
        parent="Theme.IarosInternational.Text.title_page">
    </style>

    <style name="Theme.IarosInternational.Text.title_mission"
        parent="Theme.IarosInternational.Text.title_page">
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:padding">8dp</item>

    </style>

    <style name="Theme.IarosInternational.Text.title_privacy"
        parent="Theme.IarosInternational.Text.title_page">
    </style>

    <style name= "Theme.IarosInternational.CardView" parent="CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="android:layout_marginHorizontal">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginVertical">@dimen/card_margin_vertical</item>
        <item name="contentPadding">@dimen/card_padding</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="Theme.IarosInternational.Icon" parent="">
        <item name="android:color">@color/blu_iaros</item>
        <item name="android:layout_width">@dimen/icon_width</item>
        <item name="android:layout_height">@dimen/icon_height</item>
        <item name="android:padding">@dimen/icon_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Theme.IarosInternational.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_lighter</item>
    </style>

    <style name="Theme.IarosInternational.Table">
        <item name="android:padding">@dimen/table_padding</item>
    </style>

</resources>
