<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/main_padding_start"
    android:paddingTop="@dimen/main_padding_top"
    android:paddingEnd="@dimen/main_padding_end"
    android:paddingBottom="@dimen/main_padding_bottom"
    tools:context=".ui.mission.MissionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/logo_h"
                android:src="@drawable/ic_logo_testo_iaros" />

            <androidx.cardview.widget.CardView
                style="@style/Theme.IarosInternational.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        style="@style/Theme.IarosInternational.Text.title_mission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/green_light"
                        android:text="@string/intestazione_1" />

                    <View
                        style="@style/Theme.IarosInternational.Divider"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textView3"
                        style="@style/Theme.IarosInternational.Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/corpo_cardview_mission_1" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/Theme.IarosInternational.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        style="@style/Theme.IarosInternational.Text.title_mission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/green_light"
                        android:text="@string/intestazione_2" />

                    <View
                        style="@style/Theme.IarosInternational.Divider"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/corpo_messaggio"
                        style="@style/Theme.IarosInternational.Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/corpo_cardview_mission_2" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/Theme.IarosInternational.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        style="@style/Theme.IarosInternational.Text.title_mission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/green_light"
                        android:text="@string/intestazione_3" />

                    <View
                        style="@style/Theme.IarosInternational.Divider"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/Theme.IarosInternational.Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/corpo_cardview_mission_3" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>