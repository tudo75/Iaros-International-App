<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Constraints_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/main_padding_start"
    android:paddingTop="@dimen/main_padding_top"
    android:paddingEnd="@dimen/main_padding_end"
    android:paddingBottom="@dimen/main_padding_bottom"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/logo_h"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_logo_testo_pieno_rect" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                style="@style/Theme.IarosInternational.CardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableLayout
                        android:id="@+id/tableLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:id="@+id/row_contatti_pagina"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/bottone"
                                style="@style/Theme.IarosInternational.Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/fi_rs_link_alt" />

                            <TextView
                                android:id="@+id/contatti_pagina"
                                style="@style/Theme.IarosInternational.Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/contatti_pagina" />

                            <ImageView
                                android:id="@+id/imageView2"
                                style="@style/Theme.IarosInternational.Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/fi_rs_angle_right" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                style="@style/Theme.IarosInternational.Divider"
                                android:layout_span="3"
                                android:layout_weight="1" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/row_contatti_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageView"
                                style="@style/Theme.IarosInternational.Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/fi_rs_marker" />

                            <TextView
                                android:id="@+id/contatti_address"
                                style="@style/Theme.IarosInternational.Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/contatti_address" />

                            <ImageView
                                android:id="@+id/imageView7"
                                style="@style/Theme.IarosInternational.Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/fi_rs_angle_right" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                style="@style/Theme.IarosInternational.Divider"
                                android:layout_span="3"
                                android:layout_weight="1" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/row_contatti_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageView3"
                                style="@style/Theme.IarosInternational.Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/fi_rs_phone_call" />

                            <TextView
                                android:id="@+id/contatti_phone"
                                style="@style/Theme.IarosInternational.Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/contatti_phone" />

                            <ImageView
                                android:id="@+id/imageView8"
                                style="@style/Theme.IarosInternational.Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/fi_rs_angle_right" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                style="@style/Theme.IarosInternational.Divider"
                                android:layout_span="3"
                                android:layout_weight="1" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/row_contatti_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageView4"
                                style="@style/Theme.IarosInternational.Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/fi_rs_at" />

                            <TextView
                                android:id="@+id/contatti_email"
                                style="@style/Theme.IarosInternational.Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/contatti_email" />

                            <ImageView
                                android:id="@+id/imageView10"
                                style="@style/Theme.IarosInternational.Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/fi_rs_angle_right" />
                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/Layout_social"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/contatti_face"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/fi_brands_facebook" />

                <ImageView
                    android:id="@+id/contatti_social"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/fi_brands_instagram" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>